<div id="error_explanation" style='display:none;'>
  <section id="errors">
    <header>
      <h2>
        <%= object.class.name.titleize.downcase %> kunde inte sparas.
        <%= object.class.name.constantize %>
      </h2>
      <h3>
        Justera fÃ¶ljande fel:
      </h3>
    </header>
    <ul>
      <% if object %>
        <% object.errors.full_messages.each do |message| %>
          <li class="error"><%= message %></li>
        <% end %>
      <% end %>
    </ul>
  </section>
</div>


<div id="response_explanation" class="flash notice" style='display:none;'>
  <header>
    <h2>
      <%= object.class.name.titleize.downcase %> har sparats. 
    </h2>
  </header>
</div>


