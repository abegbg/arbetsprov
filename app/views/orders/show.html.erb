<h1>Order <%= @order.id%></h1>
<div class="order_show">
  <div class="row">
    <div class="col-xs-6">
      <p>
        <label>Namn:</label><br />
        <%= @order.name %>
      </p>

      <p>
        <label>Adress:</label><br />
        <%= @order.adress %>
      </p>

      <p>
        <label>Co:</label><br />
        <%= @order.co %>
      </p>

      <p>
        <label>Postnummer:</label><br />
        <%= @order.zipcode %>
      </p>

      <p>
        <label>Stad:</label><br />
        <%= @order.city %>
      </p>

      <p>
        <label>Land:</label><br />
        <%= @order.country %>
      </p>

      <p>
        <label>Email:</label><br />
        <%= @order.email %>
      </p>

      <p>
        <label>Mobil:</label><br />
        <%= @order.mobile %>
      </p>

    </div>
    <div class="col-xs-6">
      <p>
        <label>Adress:</label><br />
        <%= @order.d_adress %>
      </p>

      <p>
        <label>Co:</label><br />
        <%= @order.d_co %>
      </p>

      <p>
        <label>Stad:</label><br />
        <%= @order.d_city %>
      </p>

      <p>
        <label>Postnummer:</label><br />
        <%= @order.d_zipcode %>
      </p>

      <p>
        <label>Land:</label><br />
        <%= @order.d_country %>
      </p>

      <p>
        <label>Status:</label><br />
        <%= @order.status %>
      </p>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-8">
    <h2>Orderrader pÃ¥ denna order</h2>
    <%= render 'orderrows/rows_in_order' %>
  </div>
</div>
<div class="row">
  <div class="col-xs-2 space-top">
    <% if current_user %>
      <%= link_to 'Uppdatera order', edit_order_path(@order), class: "btn btn-primary" %>
    <% end %>
    <% if !@order.persisted? %>
      <%= link_to 'Skicka order', sendorder_path(@order), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>