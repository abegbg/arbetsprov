<h1>Ordrar</h1>

<table class="order-table">
  <thead>
    <tr>
      <th>Ordernr</th>
      <th>Namn</th>
      <th>Adress</th>
      <th>Postnummer</th>
      <th>Stad</th>
      <th>Land</th>
      <th>Email</th>
      <th>Mobile</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.id, order %></td>
        <td><%= order.name %></td>
        <td><%= order.adress %></td>
        <td><%= order.zipcode %></td>
        <td><%= order.city %></td>
        <td><%= order.country %></td>
        <td><%= order.email %></td>
        <td><%= order.mobile %></td>
        <td><%= order.status %></td>
       <!-- <td><%= link_to 'Tag bort order', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

