<section>
	<% @products.each do |product| %>
		<article class="product">
			<header>
				<%= image_for_thumb(product)  %>
				<h2><%= link_to product.name, product %></h2>
			</header>
			<p>
				<%= product.description %>
			</p>
			<p>
				<%= number_to_currency(product.price, :locale => :sv) %>
			</p>
			<%= format_stock(product) %> 
			<p>
				Bild: <%= product.image %>
			</p>
		</article>
	<% end %>

</section>
